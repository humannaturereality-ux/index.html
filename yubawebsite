  <script>
    // small helpers
    const $ = (id)=>document.getElementById(id);
    document.getElementById('year').innerText = new Date().getFullYear();

    // Local storage keys
    const MEMBERS_KEY = 'hnr_members_v1';
    const QA_KEY = 'hnr_qa_v1';

    // Members - quick signup
    function loadMembers(){
      const raw = localStorage.getItem(MEMBERS_KEY);
      return raw ? JSON.parse(raw) : [];
    }
    function saveMembers(list){ localStorage.setItem(MEMBERS_KEY, JSON.stringify(list)); renderMembers(); }
    function renderMembers(){
      const list = loadMembers();
      const wrap = $('membersWrap');
      if(!list.length){ wrap.innerHTML = '<div class="mini">No members yet.</div>'; return; }
      // show small table
      let html = '<table><thead><tr><th>Name</th><th>Email</th></tr></thead><tbody>';
      for(const m of list){ html += `<tr><td>${escapeHtml(m.name)}</td><td>${escapeHtml(m.email)}</td></tr>`; }
      html += '</tbody></table>';
      wrap.innerHTML = html;
    }
    function escapeHtml(s){ return String(s||'').replace(/[&<>"]/g, c=>({ '&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;'})[c]); }

    $('tinySignup').addEventListener('click', ()=>{
      const n = $('nameTiny').value.trim();
      const e = $('emailTiny').value.trim();
      const msg = $('signupMsg');
      if(!n || !e){ msg.innerText='Please enter name and email.'; return; }
      const list = loadMembers();
      list.push({name:n, email:e, ts: new Date().toISOString()});
      saveMembers(list);
      $('nameTiny').value=''; $('emailTiny').value='';
      msg.innerText = 'Thank you ‚Äî signed up locally.';
      setTimeout(()=>msg.innerText='',3000);
    });

    $('exportCsv').addEventListener('click', ()=>{
      const list = loadMembers();
      if(!list.length){ alert('No members to export'); return; }
      const rows = [['Name','Email','Timestamp'], ...list.map(x=>[x.name,x.email,x.ts])];
      const csv = rows.map(r => r.map(cell => `"${String(cell).replace(/"/g,'""')}"`).join(',')).join('\n');
      downloadFile(csv, 'hnr_members.csv', 'text/csv');
    });

    function downloadFile(content, filename, mime){
      const blob = new Blob([content], {type: mime});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url; a.download = filename; document.body.appendChild(a); a.click();
      a.remove(); URL.revokeObjectURL(url);
    }

    // Q&A storage
    function loadQA(){ const raw = localStorage.getItem(QA_KEY); return raw ? JSON.parse(raw): []; }
    function saveQA(list){ localStorage.setItem(QA_KEY, JSON.stringify(list)); renderQA(); }
    function renderQA(){
      const list = loadQA();
      const wrap = $('qaList');
      if(!list.length){ wrap.innerHTML = '<div class="mini">No questions yet.</div>'; return; }
      let html = '';
      for(const item of list.slice().reverse()){
        html += `<div style="margin-bottom:10px;padding:8px;border-radius:8px;background:rgba(255,255,255,0.01)"><strong>${escapeHtml(item.name||'Anonymous')}</strong><div class="mini muted">${new Date(item.ts).toLocaleString()}</div><p>${escapeHtml(item.q)}</p><div style="margin-top:6px"><strong>Answer:</strong> <div class="mini">${escapeHtml(item.a||'‚Äî unanswered ‚Äî')}</div></div></div>`;
      }
      wrap.innerHTML = html;
    }

    $('askBtn').addEventListener('click', ()=>{
      const name = $('qName').value.trim() || 'Anonymous';
      const q = $('qText').value.trim();
      const m = $('askMsg');
      if(!q){ m.innerText='Please write a question.'; return; }
      const list = loadQA(); list.push({name, q, a:'', ts: new Date().toISOString()});
      saveQA(list);
      $('qText').value=''; m.innerText='Question saved locally.';
      setTimeout(()=>m.innerText='',3000);
    });

    // Simple rule-based bot (local)
    $('botBtn').addEventListener('click', ()=>{
      const q = $('qText').value.trim();
      const bot = $('botAnswer');
      if(!q){ bot.innerText = 'Please type a short question in the question box.'; return; }
      const reply = simpleBotReply(q);
      if(reply.found){
        bot.innerText = reply.text;
      }else{
        bot.innerText = "I don't have a direct answer. Saving your question for manual reply.";
        // save for manual reply
        const name = $('qName').value.trim() || 'Anonymous';
        const list = loadQA(); list.push({name, q, a:'', ts: new Date().toISOString()});
        saveQA(list);
      }
    });

    function simpleBotReply(q){
      const s = q.toLowerCase();
      if(/guru/.test(s)) return {found:true, text:'Guru refers to a path or teacher that points toward truth, practice, or meaning.'};
      if(/antiguru/.test(s)) return {found:true, text:'Antiguru indicates the opposite: misleading teachings or practices that create harm instead of peace.'};
      if(/nonguru/.test(s)) return {found:true, text:'Nonguru points to non-prescriptive silence ‚Äî trust in nature\'s spontaneous intelligence.'};
      if(/ai/.test(s) && /nature|natural/.test(s)) return {found:true, text:'AI and natural intelligence differ: one is human-designed, the other emerges from living systems.'};
      if(/how to join|join|register/.test(s)) return {found:true, text:'Use the Join / Register link or quick signup on the right to add your name and email.'};
      if(/export|download/.test(s)) return {found:true, text:'Use the Export CSV button to download stored members or Q&A as CSV.'};
      return {found:false, text:''};
    }

    // admin exports
    $('exportQa').addEventListener('click', ()=>{
      const list = loadQA();
      if(!list.length){ alert('No Q&A to export'); return; }
      const rows = [['Name','Question','Answer','Timestamp'], ...list.map(x=>[x.name,x.q,x.a,x.ts])];
      const csv = rows.map(r => r.map(cell => `"${String(cell).replace(/"/g,'""')}"`).join(',')).join('\n');
      downloadFile(csv, 'hnr_qa.csv', 'text/csv');
    });

    $('clearAll').addEventListener('click', ()=>{
      if(!confirm('Clear all members and Q&A from local storage? This cannot be undone in the browser.')) return;
      localStorage.removeItem(MEMBERS_KEY); localStorage.removeItem(QA_KEY);
      renderMembers(); renderQA();
      $('adminMsg').innerText = 'Cleared local data.';
      setTimeout(()=>$('adminMsg').innerText='',3000);
    });

    // initial render
    renderMembers(); renderQA();

    // link placeholders: if you have social pages, replace these href values in HTML or by JS below
    document.getElementById('ytLink').href = 'https://www.youtube.com/'; // replace with your youtube channel
    document.getElementById('fbLink').href = 'https://www.facebook.com/'; // replace
    document.getElementById('twLink').href = 'https://x.com/'; // replace

    // small utility: scroll to join on nav click
    document.getElementById('joinLink').addEventListener('click', (e)=>{
      e.preventDefault(); window.scrollTo({top:document.querySelector('#joinLink').offsetTop, behavior:'smooth'});
      // simple focus on tiny signup's name field
      $('nameTiny').focus();
    });
  </script>
</body>
</html>
